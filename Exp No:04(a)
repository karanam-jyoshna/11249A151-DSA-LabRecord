Appilcations of stack infix to postfix


Program:

#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define SIZE 100

char stack[SIZE];
int top = -1;

void push(char c) {
    if (top < SIZE - 1)
        stack[++top] = c;
    else
        printf("Stack overflow!\n");
}

char pop() {
    if (top == -1)
        return '\0';   // indicate empty stack
    return stack[top--];
}

int precedence(char c) {
    if (c == '^')
        return 3;
    else if (c == '*' || c == '/')
        return 2;
    else if (c == '+' || c == '-')
        return 1;
    else
        return 0;
}

int main() {
    char infix[SIZE], postfix[SIZE], ch, temp;
    int i = 0, j = 0;

    printf("Enter infix expression: ");
    if (!fgets(infix, sizeof(infix), stdin)) {
        printf("Input error\n");
        return 1;
    }
    
    infix[strcspn(infix, "\n")] = '\0';

    while ((ch = infix[i++]) != '\0') {
        if (isalnum((unsigned char)ch)) {
            postfix[j++] = ch;
        } else if (ch == '(') {
            push(ch);
        } else if (ch == ')') {
            while (top != -1 && (temp = pop()) != '(') {
                if (temp == '\0') break; // safety
                postfix[j++] = temp;
            }
        } else { 
            while (top != -1 && precedence(stack[top]) >= precedence(ch))
                postfix[j++] = pop();
            push(ch);
        }
    }

    while (top != -1)
        postfix[j++] = pop();

    postfix[j] = '\0';

    printf("Postfix Expression: %s\n", postfix);
    return 0;
}


